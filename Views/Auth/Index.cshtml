@model api_doc.Models.Login
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Entrar";
}

<div class="bg-white dark:bg-neutral-800 rounded-2xl shadow p-6 border border-gray-200 dark:border-neutral-700">
  <div class="text-center mb-4">
    <h1 class="text-xl font-semibold">Acessar conta</h1>
    <p class="text-sm text-gray-500 dark:text-neutral-400">Entre com suas credenciais</p>
  </div>

  <form asp-action="Login" asp-controller="Auth" method="post" class="space-y-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="space-y-1">
      <label asp-for="Email" class="block text-sm font-medium">E-mail</label>
      <input asp-for="Email" type="email" autocomplete="username"
             class="w-full rounded-lg border border-gray-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 px-3 py-2 outline-none focus:ring-2 focus:ring-blue-500" />
      <span asp-validation-for="Email" class="text-sm text-red-600"></span>
    </div>

    <div class="space-y-1">
      <label asp-for="Password" class="block text-sm font-medium">Senha</label>
      <input asp-for="Password" type="password" autocomplete="current-password"
             class="w-full rounded-lg border border-gray-300 dark:border-neutral-600 bg-white dark:bg-neutral-900 px-3 py-2 outline-none focus:ring-2 focus:ring-blue-500" />
      <span asp-validation-for="Password" class="text-sm text-red-600"></span>
    </div>

    <div class="flex items-center justify-between">
      <label class="inline-flex items-center gap-2 text-sm">
        <input asp-for="RememberMe" class="rounded border-gray-300 dark:border-neutral-600" type="checkbox" />
        Lembrar-me
      </label>
      <a class="text-sm text-blue-600 hover:underline" href="#">Esqueceu a senha?</a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
      <div class="text-sm text-red-600">
        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        { <div>@e.ErrorMessage</div> }
      </div>
    }

    <button type="submit"
            class="w-full inline-flex justify-center items-center gap-2 rounded-lg px-3 py-2 bg-blue-600 text-white hover:bg-blue-700 transition">
      Entrar
    </button>
  </form>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
